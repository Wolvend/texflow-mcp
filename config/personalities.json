{
  "document-author": {
    "name": "Document Author",
    "description": "Full document creation and management capabilities for TeXFlow",
    "operations": [
      "document",
      "output",
      "project",
      "printer",
      "discover",
      "workflow"
    ],
    "context": {
      "default_format": "auto",
      "project_aware": true,
      "workflow_hints": true,
      "format_escalation": true,
      "auto_suggest_next": true
    },
    "permissions": {
      "can_create": true,
      "can_edit": true,
      "can_print": true,
      "can_manage_projects": true,
      "can_configure_system": true
    }
  }
}